pipeline {
  agent any

  stages {
    stage("Apply OC Build-Time things") {
      steps {
        dir("component-1") {
          echo "oc apply -f oc-manifests/build-time/"
          sh "ls"
          sh "pwd"
        }
      }
    }

    stage('Tests') {
      steps {
        parallel (
          "Unit Tests": {
            echo 'done'
          },
          "Function Tests": {
            echo 'done'
          },
          "Urine Tests": {
            sh "cat pipelines/build/Jenkinsfile"
          }
        )
      }
    }
  }
}
